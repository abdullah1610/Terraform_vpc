pipeline {
    agent any

    parameters {
        choice(
            name: 'ENV',
            choices: ['dev', 'prod'],
            description: 'Select environment to deploy'
        )

        booleanParam(
            name: 'AUTO_APPLY',
            defaultValue: false,
            description: 'If true, Terraform apply will run automatically'
        )

        booleanParam(
            name: 'AUTO_DESTROY',
            defaultValue: false,
            description: '⚠️ DESTROY all Terraform-managed infrastructure'
        )
    }

    options {
        timestamps()
    }

    environment {
        TF_IN_AUTOMATION = "true"
        TF_ENV_DIR = "envs/${params.ENV}"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_ENV_DIR}") {
                    withCredentials([
                        usernamePassword(
                            credentialsId: 'aws-creds',
                            usernameVariable: 'AWS_ACCESS_KEY_ID',
                            passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                        )
                    ]) {
                         bat 'terraform init -reconfigure -input=false'
                    }
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir("${TF_ENV_DIR}") {
                    bat 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir("${TF_ENV_DIR}") {
                    withCredentials([
                        usernamePassword(
                            credentialsId: 'aws-creds',
                            usernameVariable: 'AWS_ACCESS_KEY_ID',
                            passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                        )
                    ]) {
                        bat 'terraform plan -var-file=terraform.tfvars -out=tfplan -input=false'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            when {
                expression { params.AUTO_APPLY && !params.AUTO_DESTROY }
            }
            steps {
                dir("${TF_ENV_DIR}") {
                    withCredentials([
                        usernamePassword(
                            credentialsId: 'aws-creds',
                            usernameVariable: 'AWS_ACCESS_KEY_ID',
                            passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                        )
                    ]) {
                        bat 'terraform apply -auto-approve tfplan'
                    }
                }
            }
        }

        stage('Terraform Destroy') {
            when {
                expression { params.AUTO_DESTROY && !params.AUTO_APPLY }
            }
            steps {
                dir("${TF_ENV_DIR}") {
                    withCredentials([
                        usernamePassword(
                            credentialsId: 'aws-creds',
                            usernameVariable: 'AWS_ACCESS_KEY_ID',
                            passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                        )
                    ]) {
                        bat 'terraform destroy -var-file=terraform.tfvars -auto-approve'
                    }
                }
            }
        }
    }
}
